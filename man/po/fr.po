#: usermod.8.xml:360(para) userdel.8.xml:126(para) useradd.8.xml:622(para)
#: su.1.xml:311(para) sg.1.xml:77(para) pwck.8.xml:214(para)
#: passwd.1.xml:357(para) newusers.8.xml:325(para) newgrp.1.xml:88(para)
