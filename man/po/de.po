msgid ""
"\n"
"\t$ groupadd -r groups\n"
"\t$ chmod 2770 groupmems\n"
"\t$ chown root.groups groupmems\n"
"\t$ groupmems -g groups -a gk4\n"
"    "
msgstr ""
"\n"
"\t$ groupadd -r groups\n"
