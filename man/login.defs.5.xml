      &SUB_GID_COUNT; <!-- documents also SUB_GID_MIN SUB_GID_MAX -->
      &SUB_UID_COUNT; <!-- documents also SUB_UID_MIN SUB_UID_MAX -->
      &SYS_GID_MAX; <!-- documents also SYS_GID_MIN -->
      &SYS_UID_MAX; <!-- documents also SYS_UID_MIN -->
      &SYSLOG_SG_ENAB;
      &SYSLOG_SU_ENAB;
